/* Hive Night - QSS Stylesheet for PyQt6 */
/* Version 2.0 - Includes Control Center Styles */

/* --- General Window & Widget Styles --- */
QMainWindow, QDialog {
    background-color: #2b2d31;
    font-family: "Inter";
    color: #f2f3f5;
}

QWidget {
    color: #f2f3f5;
    font-size: 13px;
}

/* --- Header Bar --- */
QWidget#headerBar {
    background-color: #212428;
    border-bottom: 1px solid #484b51;
}

QLabel#headerTitle {
    font-size: 18px;
    font-weight: 600;
}

/* --- Main Buttons (Header & Quick Actions) --- */
QPushButton {
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
    padding: 8px 14px;
    border: none;
}
QPushButton:hover {
    opacity: 0.9;
}

QPushButton#startButton { background-color: #5cb85c; color: #ffffff; }
QPushButton#stopButton { background-color: #d9534f; color: #ffffff; }
QPushButton#restartButton { background-color: #f0ad4e; color: #212428; }

QPushButton#llmConfigButton { background-color: #8c62ff; color: #f9f8ff; }
QPushButton#addServerButton, 
QPushButton#secretsButton, 
QPushButton#autoStartButton,
QPushButton#clientConfigButton {
    background-color: #61646a;
    color: #f2f3f5;
    border: 1px solid #484b51;
}
QPushButton#addServerButton:hover, 
QPushButton#secretsButton:hover, 
QPushButton#autoStartButton:hover,
QPushButton#clientConfigButton:hover {
    background-color: #484b51;
}

/* --- Main Tab Widget --- */
QTabWidget#mainTabWidget::pane {
    border: none;
    padding: 0;
}

QTabBar#mainTabBar::tab {
    background-color: #2b2d31;
    color: #a0a3a8;
    padding: 10px 16px;
    font-size: 14px;
    font-weight: 500;
    border-bottom: 2px solid transparent;
}
QTabBar#mainTabBar::tab:hover {
    color: #f2f3f5;
}
QTabBar#mainTabBar::tab:selected {
    color: #8c62ff;
    border-bottom-color: #8c62ff;
}

/* --- GroupBox (Sections) --- */
QGroupBox {
    background-color: #34373c;
    border: 1px solid #484b51;
    border-radius: 8px;
    padding: 16px;
    margin-top: 12px;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    left: 10px;
    color: #f2f3f5;
    font-size: 14px;
    font-weight: 600;
}

QGroupBox#quickActionsGroup {
    background-color: #2b2d31;
    border: none;
    padding: 12px 16px;
}

/* --- Notifications --- */
QWidget#notificationItem {
    background-color: #2b2d31;
    border: 1px solid #484b51;
    border-radius: 6px;
    padding: 10px 14px;
}
QWidget#notificationItem[level="critical"] { border-left: 3px solid #d9534f; }
QWidget#notificationItem[level="warning"] { border-left: 3px solid #f0ad4e; }

QPushButton#notificationToggle {
    background: transparent;
    border: none;
    color: #a0a3a8;
}
QPushButton#notificationToggle:hover { background-color: #61646a; }

/* --- Server Status & Dependencies --- */
QLabel.statusLabel { color: #a0a3a8; }
QLabel.statusValue { font-family: "JetBrains Mono"; }

/* Form Labels - ensure left column labels are visible */
QFormLayout QLabel {
    color: #a0a3a8;
    font-weight: 500;
}

/* Status Value Labels - right column */
QLabel[objectName="statusValue"] {
    color: #f2f3f5;
    font-family: "JetBrains Mono", monospace;
    font-weight: normal;
}

/* Ensure form labels don't get hidden */
QGroupBox[objectName="serviceStatusGroup"] QLabel {
    color: #a0a3a8;
}

QGroupBox[objectName="dependenciesGroup"] QLabel {
    color: #a0a3a8;
}

/* Server Status List */
QScrollArea#serverListScrollArea {
    border: none;
}
QWidget#scrollAreaWidgetContents {
    background-color: transparent;
}
QWidget#serverCard {
    background-color: #2b2d31;
    border: 1px solid #484b51;
    border-radius: 6px;
    padding: 8px 10px;
}
QLabel#statusDot[status="connected"] { background-color: #5cb85c; border-radius: 5px; }
QLabel#statusDot[status="disconnected"] { background-color: #d9534f; border-radius: 5px; }
QLabel#statusDot[status="disabled"] { background-color: #a0a3a8; border-radius: 5px; }

QPushButton#reconnectButton {
    padding: 4px 8px;
    font-size: 12px;
}

/* Toggle Switch (Styled QCheckBox) */
QCheckBox::indicator {
    width: 40px;
    height: 22px;
}
QCheckBox::indicator:unchecked {
    background-color: #61646a;
    border-radius: 11px;
}
QCheckBox::indicator:unchecked:hover {
    background-color: #484b51;
}
QCheckBox::indicator:checked {
    background-color: #8c62ff;
    border-radius: 11px;
}
QCheckBox::indicator::handle {
    background-color: white;
    border-radius: 8px;
    width: 16px;
    height: 16px;
    subcontrol-origin: padding;
    subcontrol-position: center left;
    margin-left: 3px;
}
QCheckBox::indicator:checked::handle {
    subcontrol-position: center right;
    margin-right: 3px;
}

/* MCP Clients Tab */
QPushButton.clientTabButton {
    background-color: #61646a;
    color: #f2f3f5;
    border: 1px solid #484b51;
    padding: 5px 12px;
    border-radius: 15px;
    font-size: 12px;
}
QPushButton.clientTabButton:hover { background-color: #484b51; }
QPushButton.clientTabButton:checked {
    background-color: #8c62ff;
    color: #f9f8ff;
    border-color: #8c62ff;
}

QTextEdit#codeBlock {
    background-color: #2b2d31;
    border: 1px solid #484b51;
    border-radius: 8px;
    font-family: "JetBrains Mono";
    color: #f2f3f5;
}

QLabel#footnoteKey {
    color: #a0a3a8;
    font-size: 11px;
}

/* Logs & About Tabs */
QTextEdit#logsView {
    background-color: #2b2d31;
    border: 1px solid #484b51;
    font-family: "JetBrains Mono";
}

/* LLM Configuration Window */
QLabel#introLabel {
    background-color: #34373c;
    border-radius: 6px;
    padding: 8px 15px;
    margin-bottom: 15px;
    font-size: 12px;
    color: #a0a3a8;
    line-height: 1.5;
    border: 1px solid #484b51;
    text-align: center;
}

QTabWidget#authTabs {
    background-color: #34373c;
    border: 1px solid #484b51;
    border-radius: 6px;
}

QLabel#descriptionLabel {
    font-size: 11px;
    color: #a0a3a8;
    font-style: italic;
    margin-top: 8px;
}

QLabel#keyNoteLabel {
    font-size: 10px;
    color: #a0a3a8;
    margin-top: 4px;
    padding-left: 2px;
}

QGroupBox#pathsGroup {
    border: 1px solid #484b51;
    border-radius: 5px;
    padding: 10px;
    margin-top: 12px;
    background: #2b2d31;
}

QLineEdit#pathEdit, QLineEdit#apiKeyEdit, QLineEdit#input {
    padding: 7px 10px;
    border: 1px solid #484b51;
    border-radius: 4px;
    background: #3c3f45;
    font-size: 12px;
    color: #f2f3f5;
    font-family: "JetBrains Mono";
}

QLineEdit#pathEdit:focus, QLineEdit#apiKeyEdit:focus, QLineEdit#input:focus {
    outline: none;
    border-color: #fde047;
    box-shadow: 0 0 0 2px rgba(253, 224, 71, 0.3);
}

QPushButton#detectButton, QPushButton#guideButton {
    padding: 5px 10px;
    border: 1px solid #484b51;
    border-radius: 4px;
    background: #61646a;
    font-size: 11px;
    color: #f2f3f5;
    cursor: pointer;
}

QPushButton#detectButton:hover, QPushButton#guideButton:hover {
    background: #484b51;
}

QPushButton#pillButton {
    padding: 4px 10px;
    border: 1px solid #484b51;
    border-radius: 20px;
    background: #61646a;
    font-size: 11px;
    color: #f2f3f5;
    cursor: pointer;
}

QPushButton#pillButton:hover {
    background: #484b51;
    border-color: #a0a3a8;
}

QPushButton#pillButton:checked {
    background: #fde047;
    color: #212428;
    border-color: #fde047;
}

QPushButton#saveButton {
    background: #8262ff;
    color: #f7f5ff;
}

QPushButton#testButton {
    background: #fde047;
    color: #212428;
}

QPushButton#helpButton {
    background: #61646a;
    color: #f2f3f5;
    border: 1px solid #484b51;
}

QPushButton#saveButton:hover, QPushButton#testButton:hover, QPushButton#helpButton:hover {
    opacity: 0.9;
}

/* Credential Management Window */
QLabel#headerLabel {
    font-size: 16px;
    font-weight: bold;
    margin: 10px;
}

QPushButton#addButton, QPushButton#importButton, QPushButton#exportButton {
    background-color: #61646a;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 6px;
    padding: 6px 12px;
    font-size: 12px;
}

QPushButton#addButton:hover, QPushButton#importButton:hover, QPushButton#exportButton:hover {
    background-color: #484b51;
}

QTabWidget#credentialTabs::pane {
    border: 1px solid #484b51;
    border-radius: 6px;
}

QLabel#statusLabel {
    color: #a0a3a8;
    font-style: italic;
}

QLabel#keyringStatusLabel {
    color: #a0a3a8;
}

/* Separator Line */
QFrame#separatorLine {
    background-color: #484b51;
}
