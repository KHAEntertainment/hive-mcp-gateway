/* Hive Night Theme Stylesheet */

/* Primary Colors */
QWidget {
    background-color: #2b2d31;
    color: #f2f3f5;
    border-color: #484b51;
}

/* Card/Panel Colors */
QGroupBox, QFrame {
    background-color: #34373c;
    border: 1px solid #484b51;
    border-radius: 6px;
}

/* Input Fields */
QLineEdit, QTextEdit, QComboBox, QSpinBox {
    background-color: #3c3f45;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 4px;
    padding: 4px;
}

QLineEdit:focus, QTextEdit:focus, QComboBox:focus, QSpinBox:focus {
    border-color: #fde047;
}

/* Buttons */
QPushButton {
    background-color: #61646a;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 6px;
    padding: 8px 14px;
    font-size: 13px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #6a6d72;
}

QPushButton:pressed {
    background-color: #5a5d62;
}

/* Primary Accent Buttons */
QPushButton[objectName="startButton"] {
    background-color: #5cb85c;
    color: white;
    font-weight: bold;
}

QPushButton[objectName="stopButton"] {
    background-color: #d9534f;
    color: white;
    font-weight: bold;
}

QPushButton[objectName="restartButton"] {
    background-color: #f0ad4e;
    color: white;
    font-weight: bold;
}

/* Special Buttons */
QPushButton[objectName="addServerButton"] {
    background-color: #61646a;
    color: white;
    font-weight: bold;
    padding: 8px 16px;
    border-radius: 4px;
}

QPushButton[objectName="secretsButton"] {
    background-color: #61646a;
    color: white;
    font-weight: bold;
    padding: 8px 16px;
    border-radius: 4px;
}

QPushButton[objectName="autoStartButton"] {
    background-color: #61646a;
    color: white;
    font-weight: bold;
    padding: 8px 16px;
    border-radius: 4px;
}

QPushButton[objectName="llmConfigButton"] {
    background-color: #8c62ff;
    color: white;
    font-weight: bold;
    padding: 8px 16px;
    border-radius: 4px;
}

/* Header Bar */
QWidget[objectName="headerBar"] {
    background-color: #212428;
    border-bottom: 1px solid #484b51;
}

QLabel[objectName="headerTitle"] {
    font-size: 18px;
    font-weight: 600;
    color: #f2f3f5;
}

/* Tab Widget */
QTabWidget[objectName="mainTabWidget"] {
    background-color: #2b2d31;
}

QTabBar[objectName="mainTabBar"] {
    background-color: #2b2d31;
}

QTabBar::tab {
    background-color: #34373c;
    color: #a0a3a8;
    border: 1px solid #484b51;
    border-bottom-color: #484b51;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 8px 16px;
    margin: 2px;
}

QTabBar::tab:selected {
    background-color: #34373c;
    color: #8c62ff;
    border-bottom-color: #8c62ff;
}

QTabBar::tab:hover:!selected {
    background-color: #3c3f45;
}

/* Tables */
QTableWidget {
    background-color: #34373c;
    alternate-background-color: #3c3f45;
    gridline-color: #484b51;
}

QTableWidget::item {
    padding: 4px;
}

QTableWidget::item:selected {
    background-color: #8c62ff;
    color: #f2f3f5;
}

/* Scroll Bars */
QScrollBar:vertical {
    background-color: #34373c;
    width: 15px;
    margin: 15px 3px 15px 3px;
    border: 1px solid #484b51;
    border-radius: 4px;
}

QScrollBar::handle:vertical {
    background-color: #61646a;
    min-height: 5px;
    border-radius: 4px;
}

QScrollBar::handle:vertical:hover {
    background-color: #6a6d72;
}

QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar::add-line:vertical {
    height: 0px;
}

/* Checkboxes */
QCheckBox {
    color: #f2f3f5;
    spacing: 5px;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
}

QCheckBox::indicator:unchecked {
    border: 1px solid #484b51;
    background-color: #3c3f45;
    border-radius: 3px;
}

QCheckBox::indicator:checked {
    border: 1px solid #8c62ff;
    background-color: #8c62ff;
    border-radius: 3px;
}

QCheckBox::indicator:checked:pressed {
    background-color: #8262ff;
}

/* Labels */
QLabel {
    color: #f2f3f5;
}

/* Status Labels */
QLabel[objectName="statusLabel"] {
    font-weight: 500;
}

QLabel[objectName="statusValue"] {
    font-weight: normal;
}

/* Notification Items */
QWidget[objectName="notificationItem"] {
    background-color: #34373c;
    border: 1px solid #484b51;
    border-radius: 4px;
    padding: 8px;
    margin: 2px;
}

QWidget[objectName="notificationItem"][level="info"] {
    border-left: 4px solid #8c62ff;
}

QWidget[objectName="notificationItem"][level="warning"] {
    border-left: 4px solid #fde047;
}

QWidget[objectName="notificationItem"][level="error"] {
    border-left: 4px solid #d9534f;
}

QWidget[objectName="notificationItem"][level="success"] {
    border-left: 4px solid #5cb85c;
}

/* Notification Toggle Button */
QPushButton[objectName="notificationToggle"] {
    background-color: #34373c;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 4px;
    padding: 4px 8px;
    font-weight: bold;
    text-align: left;
}

QPushButton[objectName="notificationToggle"]:hover {
    background-color: #3c3f45;
}

/* Notifications Scroll Area */
QScrollArea[objectName="notificationsScroll"] {
    background-color: #2b2d31;
    border: none;
}

/* Server Cards */
QWidget[objectName="serverCard"] {
    background-color: #34373c;
    border: 1px solid #484b51;
    border-radius: 6px;
    padding: 10px;
    margin: 5px;
}

/* Status Dots */
QLabel[objectName="statusDot"][status="connected"] {
    color: #5cb85c;
}

QLabel[objectName="statusDot"][status="disconnected"] {
    color: #d9534f;
}

QLabel[objectName="statusDot"][status="disabled"] {
    color: #a0a3a8;
}

QPushButton[objectName="editButton"]:hover,
QPushButton[objectName="deleteButton"]:hover {
    background-color: #6a6d72;
}

/* Code Blocks */
QTextEdit[objectName="codeBlock"] {
    font-family: "JetBrains Mono", "Courier New", monospace;
    background-color: #212428;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 4px;
}

/* Client Tab Buttons */
QPushButton[objectName="clientTabButton"] {
    background-color: #34373c;
    color: #a0a3a8;
    border: 1px solid #484b51;
    border-radius: 4px;
    padding: 6px 12px;
    font-size: 14px;
    font-weight: 500;
}

QPushButton[objectName="clientTabButton"]:checked {
    background-color: #8c62ff;
    color: #f2f3f5;
    border-color: #8c62ff;
}

/* Action Buttons */
QPushButton[objectName="saveButton"] {
    background-color: #8262ff;
    color: white;
    font-weight: bold;
    border-radius: 6px;
    padding: 8px 14px;
}

QPushButton[objectName="testButton"] {
    background-color: #8c62ff;
    color: white;
    font-weight: bold;
    border-radius: 6px;
    padding: 8px 14px;
}

QPushButton[objectName="helpButton"] {
    background-color: transparent;
    color: #8c62ff;
    border: none;
    text-decoration: underline;
    border-radius: 6px;
    padding: 8px 14px;
}

QPushButton[objectName="helpButton"]:hover {
    color: #9a7cff;
}

/* Credential Dialog Styles */
QLabel[objectName="dialogHeader"] {
    font-size: 16px;
    font-weight: 600;
    color: #f2f3f5;
    margin: 10px 0;
}

QLineEdit[objectName="keyEdit"],
QLineEdit[objectName="valueEdit"] {
    background-color: #3c3f45;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 4px;
    padding: 4px;
}

QLineEdit[objectName="keyEdit"]:focus,
QLineEdit[objectName="valueEdit"]:focus {
    border-color: #fde047;
}

QComboBox[objectName="typeCombo"] {
    background-color: #3c3f45;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 4px;
    padding: 4px;
    min-width: 150px;
}

QTextEdit[objectName="descriptionEdit"] {
    background-color: #3c3f45;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 4px;
    padding: 4px;
}

QGroupBox[objectName="previewGroup"] {
    background-color: #34373c;
    border: 1px solid #484b51;
    border-radius: 6px;
    margin-top: 10px;
}

QLabel[objectName="previewLabel"] {
    color: #a0a3a8;
    font-style: italic;
    padding: 8px;
}

QPushButton[objectName="editButton"],
QPushButton[objectName="deleteButton"] {
    background-color: #61646a;
    color: #f2f3f5;
    border: 1px solid #484b51;
    border-radius: 4px;
    font-size: 12px;
}

/* Form Labels */
QLabel[objectName="introLabel"] {
    color: #f2f3f5;
    word-wrap: true;
}

QLabel[objectName="descriptionLabel"] {
    color: #a0a3a8;
    font-style: italic;
    font-size: 11px;
}

QLabel[objectName="keyNoteLabel"] {
    color: #a0a3a8;
    font-style: italic;
    font-size: 11px;
}

/* Credential Management Styles */
QLabel[objectName="headerLabel"] {
    font-size: 18px;
    font-weight: 600;
    color: #f2f3f5;
    margin: 10px 0;
}

QTextBrowser[objectName="descriptionText"] {
    background-color: #34373c;
